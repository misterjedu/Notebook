<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEDFF"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/listItemNoteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/a"
        android:visibility="visible" />

    <TextView
        android:id="@+id/listItemNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listItemNoteImg"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Note Title "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#5A5656"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listItemNoteBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/listItemNoteTitle"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:singleLine="true"
        android:text="Suspiciously long text for the body of the Layout "
        android:textSize="15sp" />

</RelativeLayout>
